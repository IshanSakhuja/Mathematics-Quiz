<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivtimer"
        android:layout_width="66dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/yellow" />

    <TextView
        android:id="@+id/tvtimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="30s"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ivtimer"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="@+id/ivtimer"
        app:layout_constraintTop_toTopOf="@+id/ivtimer" />

    <ImageView
        android:id="@+id/ivquescount"
        android:layout_width="82dp"
        android:layout_height="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/orange" />

    <TextView
        android:id="@+id/tvquescount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/16"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivquescount"
        app:layout_constraintEnd_toEndOf="@+id/ivquescount"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/ivquescount"
        app:layout_constraintTop_toTopOf="@+id/ivquescount" />

    <ImageView
        android:id="@+id/ivblue"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:onClick="main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        app:srcCompat="@drawable/darkblue" />

    <TextView
        android:id="@+id/tvoption1"
        android:layout_width="82dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:onClick="main"
        android:text="36"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivblue"
        app:layout_constraintEnd_toEndOf="@+id/ivblue"
        app:layout_constraintStart_toStartOf="@+id/ivblue"
        app:layout_constraintTop_toTopOf="@+id/ivblue" />

    <ImageView
        android:id="@+id/ivgreen"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:onClick="main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivblue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/ivclay"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:onClick="main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivblue"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/clayblue" />

    <ImageView
        android:id="@+id/ivpink"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:onClick="main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivclay"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivblue"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pink" />

    <TextView
        android:id="@+id/tvoption2"
        android:layout_width="82dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:onClick="main"
        android:text="36"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivgreen"
        app:layout_constraintEnd_toEndOf="@+id/ivgreen"
        app:layout_constraintStart_toEndOf="@+id/ivblue"
        app:layout_constraintTop_toTopOf="@+id/ivgreen" />

    <TextView
        android:id="@+id/tvoption3"
        android:layout_width="82dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:onClick="main"
        android:text="30"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivpink"
        app:layout_constraintEnd_toStartOf="@+id/ivclay"
        app:layout_constraintStart_toStartOf="@+id/ivpink"
        app:layout_constraintTop_toBottomOf="@+id/ivblue" />

    <TextView
        android:id="@+id/tvoption4"
        android:layout_width="82dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:text="28"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivclay"
        app:layout_constraintEnd_toEndOf="@+id/ivclay"
        app:layout_constraintStart_toStartOf="@+id/ivclay"
        app:layout_constraintTop_toBottomOf="@+id/ivgreen" />

    <TextView
        android:id="@+id/tvsolv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="36sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivclay"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/tvquestion"
        android:layout_width="98dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="start"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ivblue"
        app:layout_constraintEnd_toStartOf="@+id/ivquescount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivtimer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivstart"
        android:layout_width="179dp"
        android:layout_height="154dp"
        android:layout_marginTop="216dp"
        android:foregroundGravity="center"
        android:onClick="ishan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green" />

    <TextView
        android:id="@+id/tvstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:gravity="center"
        android:text="GO!"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivstart"
        app:layout_constraintEnd_toEndOf="@+id/ivgreen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ivstart"
        app:layout_constraintTop_toTopOf="@+id/ivstart"
        app:layout_constraintVertical_bias="0.46" />

    <Button
        android:id="@+id/bu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buishan"
        android:text="Play Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivstart"
        app:layout_constraintVertical_bias="0.666" />

</androidx.constraintlayout.widget.ConstraintLayout>